[user]
name = Mathieu Gosselin
email = mathieu.gosselin@anekdotes.com
[color]
ui = true
branch = auto
diff = auto
status = auto
[color "branch"]
current = yellow reverse
local = yellow
remote = green
[color "diff"]
meta = yellow bold
frag = magenta bold
old = red bold
new = green bold
[color "status"]
added = green bold
changed = red bold
untracked = cyan
[core]
editor = nano
excludesfile = ~/.gitignore_global
	preloadIndex = false
[merge]
ff = false
[push]
default = simple
[pack]
	threads = 1
	packSizeLimit = 100m
	windowMemory = 100m
